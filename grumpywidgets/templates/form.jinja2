<form
    {%- if id %} id="{{ id }}"{% endif %}
    {%- if name %} name="{{ name }}"{% endif %}
    {%- if value %} value="{{ value }}"{% endif %}
    {%- if css_classes %} class="{{ css_classes }}"{% endif %}
    {%- if True %} action="{{ url }}"{% endif %}
    {%- if True %} method="{{ method }}"{% endif %}
    {%- if True %} accept-charset="{{ charset }}"{% endif %}>
    {%- for child in children -%}
        <div class="{{ ' '.join(child.css_classes_for_container()) }}">
            {%- set label = child.label_widget and child.label_widget() or None -%}
                {%- if label -%}
                    {{- label.display() -}}
                {%- endif -%}
            {{ child.display() }}
            {%- if child.context.contains_errors() -%}
                {%- for rendered_msg in child.context.rendered_errors() -%}
                    <span class="fielderror">{{ rendered_msg }}</span>
                {%- endfor -%}
            {%- endif -%}
        </div>
    {%- endfor -%}
</form>
