<textarea
    {%- if id %} id="{{ id }}"{% endif %}
    {%- if self_.full_name() %} name="{{ self_.full_name() }}"{% endif %}
    {%- if cols %} cols="{{ cols }}"{% endif %}
    {%- if rows %} rows="{{ rows }}"{% endif %}
    {%- if css_classes %} class="{{ css_classes }}"{% endif %}>
    {%- if value %}{{ value }}{% endif -%}
</textarea>
